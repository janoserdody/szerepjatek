<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HarcActivity2">

    <ImageView
        android:id="@+id/viewMonster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/hat" />

    <ImageView
        android:id="@+id/viewPlayer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hat" />

    <TextView
        android:id="@+id/textPlayer"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="36dp"
        android:text="Player: 30"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/viewPlayer"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textMonster"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="116dp"
        android:text="Monster: 15"
        android:textColor="#E91E63"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewMonster" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="83dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/viewMonster"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rock" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="82dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/viewMonster"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/rock2" />

    <ImageView
        android:id="@+id/imageViewPlayer"
        android:layout_width="100dp"
        android:layout_height="237dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fighter1" />

    <ImageView
        android:id="@+id/imageViewMonster"
        android:layout_width="113dp"
        android:layout_height="268dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/monster2" />

</androidx.constraintlayout.widget.ConstraintLayout>